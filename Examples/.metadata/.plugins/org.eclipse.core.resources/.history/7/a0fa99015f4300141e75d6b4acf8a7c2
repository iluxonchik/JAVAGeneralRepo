
public class Bird extends Prey{

	public Bird(){
		this.energy = INIT_ENERGY;
		AlivePrey = new AlivePreyState(this);
		DeadPrey = new DeadPreyState(this);
		if (this.getEnergy() >= 0){
			this.setState(AlivePrey);
		}
		else{
			// bird is dead from the beginning
			this.setState(DeadPrey);
		}
	}

	@Override
	public void run() {
		state.run();
	}

	@Override
	public void sleep() {
		state.sleep();		
	}

}
