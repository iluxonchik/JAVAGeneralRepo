
public class DeadPreyState implements PreyState{

	Prey prey; // reference to the object whose bahaviour is wrapped
	
	@Override
	public void run() {
		printDeadMessage();
	}

	@Override
	public void escape() {
		printDeadMessage();		
	}

	@Override
	public void sleep() {
		printDeadMessage();
	}

	public void printDeadMessage(){
		System.out.println("This prey is dead.\n");
	}
}
